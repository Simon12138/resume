                        {{/if}}
                        {{#if website}}
                        <div class="contact-item">
                            <div class="contact-icon">üåê</div>
                            <span>{{website}}</span>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="main-content">
            <div class="content-left">
                {{#if summary}}
                <section class="section">
                    <h2 class="section-title">‰∏™‰∫∫ÁÆÄ‰ªã</h2>
                    <div class="summary-content">
                        <p>{{summary}}</p>
                    </div>
                </section>
                {{/if}}
                
                {{#if experience.length}}
                <section class="section">
                    <h2 class="section-title">Â∑•‰ΩúÁªèÂéÜ</h2>
                    {{#each experience}}
                    <div class="card">
                        <div class="item-header">
                            <span class="company">{{company}}</span>
                            <span class="date">{{startDate}} - {{endDate}}</span>
                        </div>
                        <div class="position">{{position}}</div>
                        <ul>
                            {{#each responsibilities}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                </section>
                {{/if}}
                
                {{#if projects.length}}
                <section class="section">
                    <h2 class="section-title">È°πÁõÆÁªèÈ™å</h2>
                    {{#each projects}}
                    <div class="card project-item">
                        <div class="project-name">{{name}}</div>
                        <p>{{description}}</p>
                    </div>
                    {{/each}}
                </section>
                {{/if}}
            </div>
            
            <div class="content-right">
                {{#if education.length}}
                <section class="section">
                    <h2 class="section-title">ÊïôËÇ≤ËÉåÊôØ</h2>
