<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{name}}ÁöÑÁÆÄÂéÜ</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #444;
            max-width: 750px;
            margin: 0 auto;
            padding: 40px 20px;
            background-color: #fff;
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .name {
            font-size: 36px;
            margin: 0 0 10px 0;
            color: #222;
            font-weight: normal;
            letter-spacing: -0.5px;
        }
        
        .job-title {
            font-size: 18px;
            color: #777;
            margin: 0 0 20px 0;
        }
        
        .contact-info {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            font-size: 14px;
            color: #666;
        }
        
        .section {
            margin-bottom: 35px;
        }
        
        .section-title {
            font-size: 22px;
            color: #333;
            font-weight: normal;
            margin-bottom: 20px;
            position: relative;
        }
        
        .section-title::after {
            content: '';
            display: block;
            width: 50px;
            height: 1px;
            background: #333;
            margin-top: 10px;
        }
        
        .experience-item {
            margin-bottom: 25px;
        }
        
        .item-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }
        
        .company {
            font-weight: bold;
            font-size: 17px;
        }
        
        .date {
            color: #777;
            font-size: 14px;
        }
        
        .position {
            color: #555;
            margin-bottom: 10px;
            font-size: 15px;
        }
        
        ul {
            padding-left: 20px;
            margin: 10px 0;
        }
        
        li {
            margin-bottom: 6px;
        }
        
        .education-item {
            margin-bottom: 20px;
        }
        
        .skills-content {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
        }
        
        .skills-content span {
            background: #f0f0f0;
            padding: 6px 14px;
            border-radius: 3px;
            font-size: 14px;
        }
        
        @media print {
            body {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1 class="name">{{name}}</h1>
        {{#if jobTitle}}
        <div class="job-title">{{jobTitle}}</div>
        {{/if}}
        <div class="contact-info">
            {{#if phone}}
            <span>üìû {{phone}}</span>
            {{/if}}
            {{#if email}}
            <span>‚úâÔ∏è {{email}}</span>
            {{/if}}
            {{#if address}}
            <span>üìç {{address}}</span>
            {{/if}}
        </div>
    </div>
    
    {{#if summary}}
    <section class="section">
        <h2 class="section-title">‰∏™‰∫∫ÁÆÄ‰ªã</h2>
        <p>{{summary}}</p>
    </section>
    {{/if}}
    
    {{#if workExperience.length}}
    <section class="section">
        <h2 class="section-title">Â∑•‰ΩúÁªèÂéÜ</h2>
        {{#each workExperience}}
        <div class="experience-item">
            <div class="item-header">
                <span class="company">{{company}}</span>
                <span class="date">{{startDate}} - {{endDate}}</span>
            </div>
            <div class="position">{{position}}</div>
            {{#if responsibilities}}
            <ul>
                {{#each responsibilities}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
        {{/each}}
    </section>
    {{/if}}
    
    {{#if education.length}}
    <section class="section">
        <h2 class="section-title">ÊïôËÇ≤ËÉåÊôØ</h2>
        {{#each education}}
        <div class="education-item">
            <div class="item-header">
                <span class="company">{{school}}</span>
                <span class="date">{{startDate}} - {{endDate}}</span>
            </div>
            <div>{{degree}} - {{major}}</div>
        </div>
        {{/each}}
    </section>
    {{/if}}
    
    {{#if skills.length}}
    <section class="section">
        <h2 class="section-title">ÊäÄËÉΩ‰∏ìÈïø</h2>
        <div class="skills-content">
            {{#each skills}}
            <span>{{this}}</span>
            {{/each}}
        </div>
    </section>
    {{/if}}
    
    {{#if projects.length}}
    <section class="section">
        <h2 class="section-title">È°πÁõÆÁªèÈ™å</h2>
        {{#each projects}}
        <div class="experience-item">
            <div class="item-header">
                <span class="company">{{name}}</span>
            </div>
            <p>{{description}}</p>
        </div>
        {{/each}}
    </section>
    {{/if}}
</body>
</html>
