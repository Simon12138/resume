                    </div>
                    {{/each}}
                </section>
                {{/if}}
            </div>
            
            <div class="content-right">
                {{#if education.length}}
                <section class="section">
                    <h2 class="section-title">ÊïôËÇ≤ËÉåÊôØ</h2>
                    {{#each education}}
