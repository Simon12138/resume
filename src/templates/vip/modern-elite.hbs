                {{/if}}
                {{#if website}}
                <span>üåê {{website}}</span>
                {{/if}}
            </div>
        </div>
        
        <div class="main-content">
            <div class="content-left">
                {{#if summary}}
                <section class="section">
                    <h2 class="section-title">‰∏™‰∫∫ÁÆÄ‰ªã</h2>
                    <div class="summary-content">
                        <p>{{summary}}</p>
