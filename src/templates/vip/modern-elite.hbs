                </section>
                {{/if}}
                
                {{#if skills.length}}
                <section class="section">
                    <h2 class="section-title">ÊäÄËÉΩ‰∏ìÈïø</h2>
                    <div class="skills-content">
                        {{#each skills}}
                        <span class="skill-item">{{this}}</span>
                        {{/each}}
                    </div>
                </section>
                {{/if}}
                
                {{#if languages.length}}
