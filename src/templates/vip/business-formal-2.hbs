<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{name}}ÁöÑÁÆÄÂéÜ</title>
    <style>
        body {
            font-family: 'SimHei', 'Èªë‰Ωì', sans-serif;
            line-height: 1.6;
            color: #222;
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
        }
        
        .resume-container {
            background: white;
            border: 1px solid #ddd;
            padding: 40px;
        }
        
        .header {
            text-align: center;
            border-bottom: 3px double #003366;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        
        .name {
            font-size: 36px;
            margin: 0 0 10px 0;
            color: #003366;
            font-weight: bold;
            letter-spacing: 2px;
        }
        
        .job-title {
            font-size: 20px;
            color: #555;
            margin: 0 0 15px 0;
        }
        
        .contact-info {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 25px;
            font-size: 15px;
        }
        
        .contact-info span {
            display: flex;
            align-items: center;
        }
        
        .section {
            margin-bottom: 30px;
        }
        
        .section-title {
            font-size: 22px;
            color: #003366;
            border-bottom: 2px solid #003366;
            padding-bottom: 8px;
            margin-bottom: 20px;
            text-align: center;
        }
        
        .summary-content {
            background-color: #f0f4f8;
            padding: 20px;
            border-radius: 5px;
            border-left: 4px solid #003366;
        }
        
        .experience-item {
            margin-bottom: 25px;
            padding: 15px;
            border-left: 2px solid #003366;
            background-color: #fafafa;
        }
        
        .item-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }
        
        .company {
            font-weight: bold;
            font-size: 18px;
            color: #003366;
        }
        
        .date {
            color: #666;
            font-weight: bold;
        }
        
        .position {
            color: #333;
            margin-bottom: 10px;
            font-style: italic;
        }
        
        ul {
            padding-left: 25px;
            margin: 10px 0;
        }
        
        li {
            margin-bottom: 8px;
        }
        
        .education-item {
            margin-bottom: 20px;
            padding: 10px;
            background-color: #f8f9fa;
        }
        
        .degree {
            font-weight: bold;
            color: #003366;
        }
        
        .edu-date {
            color: #666;
            font-size: 14px;
        }
        
        .skills-content {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        
        .skills-content span {
            display: inline-block;
            background: #003366;
            color: white;
            padding: 6px 12px;
            border-radius: 15px;
        }
        
        @media print {
            body {
                background-color: white;
                padding: 0;
            }
            
            .resume-container {
                border: none;
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="resume-container">
        <header class="header">
            <h1 class="name">{{name}}</h1>
            {{#if jobTitle}}
            <div class="job-title">{{jobTitle}}</div>
            {{/if}}
            <div class="contact-info">
                {{#if phone}}
                <span>üìû {{phone}}</span>
                {{/if}}
                {{#if email}}
                <span>‚úâÔ∏è {{email}}</span>
                {{/if}}
                {{#if address}}
                <span>üìç {{address}}</span>
                {{/if}}
            </div>
        </header>
        
        {{#if summary}}
        <section class="section">
            <h2 class="section-title">‰∏™‰∫∫ÁÆÄ‰ªã</h2>
            <div class="summary-content">
                <p>{{summary}}</p>
            </div>
        </section>
        {{/if}}
        
        {{#if workExperience.length}}
        <section class="section">
            <h2 class="section-title">Â∑•‰ΩúÁªèÂéÜ</h2>
            {{#each workExperience}}
            <div class="experience-item">
                <div class="item-header">
                    <span class="company">{{company}}</span>
                    <span class="date">{{startDate}} - {{endDate}}</span>
                </div>
                <div class="position">{{position}}</div>
                {{#if responsibilities}}
                <ul>
                    {{#each responsibilities}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                {{/if}}
            </div>
            {{/each}}
        </section>
        {{/if}}
        
        {{#if education.length}}
        <section class="section">
            <h2 class="section-title">ÊïôËÇ≤ËÉåÊôØ</h2>
            {{#each education}}
            <div class="education-item">
                <div class="item-header">
                    <span class="company">{{school}}</span>
                    <span class="date">{{startDate}} - {{endDate}}</span>
                </div>
                <div class="degree">{{degree}} - {{major}}</div>
            </div>
            {{/each}}
        </section>
        {{/if}}
        
        {{#if skills.length}}
        <section class="section">
            <h2 class="section-title">ÊäÄËÉΩ‰∏ìÈïø</h2>
            <div class="skills-content">
                {{#each skills}}
                <span>{{this}}</span>
                {{/each}}
            </div>
        </section>
        {{/if}}
        
        {{#if projects.length}}
        <section class="section">
            <h2 class="section-title">È°πÁõÆÁªèÈ™å</h2>
            {{#each projects}}
            <div class="experience-item">
                <div class="item-header">
                    <span class="company">{{name}}</span>
                </div>
                <p>{{description}}</p>
            </div>
            {{/each}}
        </section>
        {{/if}}
    </div>
</body>
</html>
