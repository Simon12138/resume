                    <h2 class="section-title">ËØ≠Ë®ÄËÉΩÂäõ</h2>
                    <div class="professional-card">
                        <ul>
                            {{#each languages}}
                            <li>{{language}}: {{proficiency}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </section>
                {{/if}}
            </div>
        </div>
    </div>
</body>
</html>
